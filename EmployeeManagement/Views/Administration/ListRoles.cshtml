@model IEnumerable<IdentityRole>;

@{ 

    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

<a style="width:auto;" asp-action="CreateRole" asp-controller="administration" class="btn btn-primary mb-3">Add New Role</a>

@if (Model.Any())
{

    
    foreach (var role in Model)
    { 
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">
                <a class="btn btn-primary">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>  
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a role</h5>
            <a asp-controller="administration" asp-action="CreateRole" style="width:auto;" class="btn btn-primary">Create Role</a>
        </div>
    </div>
}