@model HomeDetailsViewModel

@{
    ViewBag.Title = @Model.Employee.Name + "'s Details";
    var photoPath = "~/Images/" + (@Model.Employee.PhotoPath ?? "colinlancaster.jpg");
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Employee.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img src="@photoPath" alt="A picture" class="card-img-top" asp-append-version="true"/>
                    <h4>Employee ID: @Model.Employee.Id</h4>
                    <h4>Employee Email: @Model.Employee.Email</h4>
                    <h4>Department: @Model.Employee.Department</h4>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>

<!-- Name the section "Scripts". Pass the specific reference to the file here. -->
@section Scripts
{
    <script src="~/js/CustomScript.js"></script>
}